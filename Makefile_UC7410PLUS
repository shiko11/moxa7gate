# Defined for UC-7420/7410/7408/7402-LX/DA-660-8/16-LX
#PLATFORM = UC7400_AND_DA660

# Defined for UC-7420/7410/7408/7402-LX Plus and /DA-661/662/663-16-LX
PLATFORM = UC7400PLUS_AND_DA66X

ifeq ($(PLATFORM), UC7400_AND_DA660)
  PREFIX=mxscaleb-
else
  ifeq ($(PLATFORM),UC7400PLUS_AND_DA66X)
    PREFIX=xscale_be-
  else
    PREFIX=
  endif
endif  

CC=$(PREFIX)gcc
STRIP=$(PREFIX)strip
NAME=moxa7gate

all: release debug

clean:
	rm -f $(NAME)-release $(NAME)-debug

release:
	$(CC) -o $(NAME)-release \
main.c global.c workers.c modbus_rtu.c modbus_tcp.c \
mx_keypad_lcm.c mxshm.c monitoring.c \
mxlib/mxkeypad_lx.c mxlib/mxlcm_lx.c mxlib/mxwdg_lx.c mxlib/mxbuzzer_lx.c \
-lpthread
	$(STRIP) -s $(NAME)-release

debug:
	$(CC) -ggdb -o $(NAME)-debug \
main.c global.c workers.c modbus_rtu.c modbus_tcp.c \
mx_keypad_lcm.c mxshm.c monitoring.c \
mxlib/mxkeypad_lx.c mxlib/mxlcm_lx.c mxlib/mxwdg_lx.c mxlib/mxbuzzer_lx.c \
-lpthread
